<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/visitor_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="未注册？游客登陆"
        android:textColor="#03A9F4"
        android:textSize="15dp"
        android:layout_below="@+id/regist"
        android:layout_alignRight="@+id/regist"
        android:layout_alignEnd="@+id/regist"/>

    <FrameLayout
        android:id="@+id/regist"
        android:background="#ffffff"
        android:elevation="3dip"
        android:layout_width="335dp"
        android:layout_height="330dp"
        android:foregroundGravity="center"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/registusername"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="-130dp"
            android:layout_gravity="center"
            android:hint="用户名"
            android:inputType="text"
            android:maxLength="10"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="#878787"/>
        <EditText
            android:id="@+id/registpassword"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="-70dp"
            android:layout_gravity="center"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="#878787"/>
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="-10dp"
            android:layout_gravity="center"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="#878787"/>
        <EditText
            android:id="@+id/registEmail"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:hint="邮箱地址"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="#878787"/>


        <EditText
            android:id="@+id/registyzm"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="#878787"/>

        <TextView
            android:id="@+id/btn_yzm"
            android:layout_width="156dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="250dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="bottom|center|center_horizontal|fill_vertical"
            android:text="获取验证码"
            android:textColor="#628b34"
            android:textSize="20dp" />
        </FrameLayout>


    <FrameLayout
        android:background="#ffffff"
        android:elevation="3dip"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:foregroundGravity="center"
        android:layout_marginTop="450dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/btn_regist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="注    册"
            android:textStyle="bold"
            android:textColor="#6E8B3D"
            android:textSize="25dp"
            android:elevation="3dip"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"/>
    </FrameLayout>

</RelativeLayout>