<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp">
       <TextView
           android:id="@+id/textViewp1"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textSize="30sp"
           android:textColor="#03A9F4"
           android:text="●竞技体育"/>
       <Button
           android:id="@+id/shaixuan"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="right|center"
           android:background="@android:color/transparent"
           android:text="筛选"
           android:textSize="30dp"
           android:textColor="@android:color/black" />
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/imagefczlmp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/nba"
                />
            <TextView
                android:id="@+id/textfczlmp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="NBA">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/imagegtxonep"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/zuqiu"
                />
            <TextView
                android:id="@+id/textgtxonep"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="足球"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/imagegtxtwop"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/wangqiu"
                />
            <TextView
                android:id="@+id/textgtxtwop"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="网球"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/imagexchhp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/yumaoqiu"
                />
            <TextView
                android:id="@+id/textxchhp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="羽毛球"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewp2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#2196F3"
        android:text="●体育类直播"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/videop5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/nba"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="nba"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/videop6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/zuqiu"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="国际足球"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/videop7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/shijiebei"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="世界杯"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/videop8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/pingpangqiu"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="乒乓球"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewp3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#2196F3"
        android:text="●体育谈论区"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/videop9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/nba"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="nba"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/videop10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/shijiebei"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="世界杯"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
