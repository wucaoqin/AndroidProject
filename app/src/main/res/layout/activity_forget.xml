<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="335dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="#ffffff"
        android:elevation="3dip"
        android:foregroundGravity="center">

        <EditText
            android:id="@+id/registEmail1"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="-60dp"
            android:layout_gravity="center"
            android:hint="邮箱地址"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="#878787"/>

        <EditText
            android:id="@+id/registyzm1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="#878787"/>

        <TextView
            android:id="@+id/btn_yzm1"
            android:layout_width="156dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="90dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="bottom|center|center_horizontal|fill_vertical"
            android:text="获取验证码"
            android:textColor="#628b34"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/password1"
            android:hint="输入新密码"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:maxLength="20"
            android:paddingLeft="20dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/registlayout"
        android:background="#ffffff"
        android:elevation="3dip"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:foregroundGravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp">

        <TextView
            android:id="@+id/regist1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:elevation="3dip"
            android:background="#ffffff"
            android:gravity="center"
            android:textColor="#6E8B3D"
            android:text="更改密码"
            android:foreground="?attr/selectableItemBackground"
            />

    </FrameLayout>

</RelativeLayout>